{% from '@SyliusAdmin/Macro/translationForm.html.twig' import translationFormWithSlug %}

{% form_theme form '@EightLinesSyliusCartLinksPlugin/Admin/Form/theme.html.twig' %}

<div class="ui two column stackable grid">
    <div class="column">
        {{ form_errors(form) }}

        <div class="ui segment">
            <div class="ui two column stackable grid">
                <div class="column">
                    <div class="field">
                        {{ form_row(form.code) }}
                    </div>

                    <div class="field">
                        {{ form_row(form.enabled) }}
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        {{ form_row(form.usageLimit) }}
                    </div>

                    <div class="field">
                        {{ form_row(form.emptyCart) }}
                    </div>
                </div>
            </div>

            <h4 class="ui dividing header">
                {{ 'sylius.ui.channels'|trans }}
            </h4>

            <div class="one field">
                {{ form_row(form.channels) }}
            </div>

            <h4 class="ui dividing header">
                {{ 'sylius.ui.date_range'|trans }}
            </h4>

            <div class="two fields">
                <div class="field">
                    {{ form_row(form.startsAt) }}
                </div>

                <div class="field">
                    {{ form_row(form.endsAt) }}
                </div>
            </div>

            <h4 class="ui dividing header">
                {{ 'sylius.ui.translations'|trans }}
            </h4>

            <div class="one field">
                {{ translationFormWithSlug(form.translations, '@SyliusAdmin/Product/_slugField.html.twig', resource) }}
            </div>
        </div>
    </div>

    <div class="column">
        <div class="ui segment">
            <div class="column" id="actions">
                {{ form_row(form.actions) }}
            </div>
        </div>
    </div>
</div>
