<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="eightlines_sylius_notification_plugin.form.notification.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>

        <parameter key="eightlines_sylius_notification_plugin.form.notification_action.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>

        <parameter key="eightlines_sylius_notification_plugin.form.notification_message_translation.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>

        <parameter key="eightlines_sylius_notification_plugin.example_notification_channels" type="collection">
            <parameter>sylius</parameter>
        </parameter>
    </parameters>

    <services>
        <defaults public="true" autowire="false" autoconfigure="false" />

        <!-- Menu -->
        <service id="EightLines\SyliusNotificationPlugin\Menu\AdminMenuListener">
            <tag name="kernel.event_listener" method="buildMenu" event="sylius.menu.admin.main" />
        </service>

        <!-- Form Types -->
        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationType">
            <argument>%eightlines_sylius_notification_plugin.model.notification.class%</argument>
            <argument>%eightlines_sylius_notification_plugin.form.notification.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationActionType">
            <argument>%eightlines_sylius_notification_plugin.model.notification_action.class%</argument>
            <argument>%eightlines_sylius_notification_plugin.form.notification_action.validation_groups%</argument>
            <argument type="service" id="eightlines_sylius_notifications_plugin.registry.notification_event.configuration_form_types" />
            <tag name="form.type" />
        </service>

        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationMessageTranslationType">
            <argument>%eightlines_sylius_notification_plugin.model.notification_message_translation.class%</argument>
            <argument>%eightlines_sylius_notification_plugin.form.notification_message_translation.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationActionCollectionType">
            <argument type="service" id="eightlines_sylius_notifications_plugin.registry.notification_events" />
            <tag name="form.type" />
        </service>

        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationActionChoiceType">
            <argument>%eightlines_sylius_notification_plugin.example_notification_channels%</argument>
            <tag name="form.type" />
        </service>

        <service id="EightLines\SyliusNotificationPlugin\Form\Type\NotificationEventChoiceType">
            <argument type="service" id="eightlines_sylius_notifications_plugin.registry.notification_events" />
            <tag name="form.type" />
        </service>

        <!-- Service Registry -->
        <service id="eightlines_sylius_notifications_plugin.registry.notification_events"
                 class="Sylius\Component\Registry\ServiceRegistry">
            <argument>EightLines\SyliusNotificationPlugin\NotificationEvent\NotificationEventInterface</argument>
            <argument>notification event</argument>
        </service>

        <instanceof id="EightLines\SyliusNotificationPlugin\NotificationEvent\NotificationEventInterface" autowire="true">
            <tag name="eightlines_sylius_notifications_plugin.notification_event" />
        </instanceof>

        <!-- Form Type Registry -->
        <service id="eightlines_sylius_notifications_plugin.registry.notification_event.configuration_form_types"
                 class="Sylius\Bundle\ResourceBundle\Form\Registry\FormTypeRegistry" />

        <!-- Event Listeners -->
        <service id="eightlines_sylius_notifications_plugin.event_listener.notification_event"
                 class="EightLines\SyliusNotificationPlugin\EventListener\NotificationEventListener">
            <argument type="service" id="eightlines_sylius_notifications_plugin.registry.notification_events" />
        </service>

        <!-- Notification Events -->
        <service id="eightlines_sylius_notifications_plugin.notification_event.sylius.order_paid"
                 class="EightLines\SyliusNotificationPlugin\NotificationEvent\Sylius\OrderPaidNotificationEvent">
            <tag name="eightlines_sylius_notifications_plugin.notification_event" />
        </service>
    </services>
</container>
