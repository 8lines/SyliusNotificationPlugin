<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="EightLines\SyliusNotificationPlugin\Entity\NotificationContentTranslation" table="8lines_notification_content_translation">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="subject" column="subject" type="text" nullable="true" />
        <field name="message" column="content" type="text" nullable="true" />
    </mapped-superclass>
</doctrine-mapping>
